<!--index.wxml-->
<view class="container">
  <form bindsubmit='formSubmit'>
    <input name="idNum" placeholder="请输入校园卡号" bindinput="input1"></input>
    <input name="name" placeholder="请输入姓名" bindinput="input2"></input>
    <radio-group name="identity" class='usermotto' bindchange="radioChange">
      <radio value="1" checked="true"/>教师
      <radio value="2" checked="false"/>学生
    </radio-group>
    <button class='usermotto' type='primary' formType="submit">注册             </button>
  </form>
</view>
